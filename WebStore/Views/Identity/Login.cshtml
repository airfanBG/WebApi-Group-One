
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>
<form asp-controller="Identity" asp-action="Login" method="post">

    <div class="col-md-5">
        <input class="form form-control" type="email" name="email" value="" />

        <input class="form form-control" type="password" name="password" value="" />

        <input type="submit" name="Login" value="Login" />
    </div>
</form>

